<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".th3">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/b1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#ffffff"
            android:layout_marginTop="40dp" >

            <TextView
                android:id="@+id/textView80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/light"
                android:textColor="#000"
                android:background="#80C7C7D8"
                android:elevation="3dp"
                android:text=" *click here for pdf "
                android:onClick="pdf11"
                />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="80dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/cab1"
                android:scaleType="fitStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/light"
                android:layout_marginLeft="130dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Computer Organization and Architecture" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:textColor="#000"
                android:fontFamily="@font/light"
                android:layout_marginLeft="10dp"
                android:text="This book is about the structure and function of computers. Its purpose is to present, as clearly and completely as possible, the nature and characteristics of modern-day computer systems. " />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/b2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            android:layout_below="@id/b1"
            app:cardCornerRadius="25dp"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/textView81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/light"
                android:textColor="#000"
                android:background="#80C7C7D8"
                android:elevation="3dp"
                android:text=" *click here for pdf "
                android:onClick="pdf12"
                />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="105dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/cab2"
                android:scaleType="fitStart"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/light"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="25dp"
                android:text="Computer Architecture A Quantative Approach" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:fontFamily="@font/light"
                android:text="The fourth edition of Computer Architecture: A Quantitative Approach may be the most significant since the first edition." />
        </android.support.v7.widget.CardView>


    </RelativeLayout>

</ScrollView>