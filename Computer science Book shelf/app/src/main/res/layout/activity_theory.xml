<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Theory">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center"
       android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <android.support.v7.widget.CardView
            android:id="@+id/t1"
            app:cardCornerRadius="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#ff000a">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Software Engineering"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/t2"
            app:cardCornerRadius="25dp"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="150dp"
            app:cardBackgroundColor="#00ff5f"
            android:layout_margin="15dp"
            >
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Operating Systems" />
        </android.support.v7.widget.CardView>
   </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <android.support.v7.widget.CardView
            android:id="@+id/t3"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#cc00ff"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#fffefe"
                android:text="Computer Architecture" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/t4"
            app:cardCornerRadius="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="#00e6ff"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Theory of Computation" />
        </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <android.support.v7.widget.CardView
            android:id="@+id/t5"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#2e00ff"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Object Oriented Analysis and Design" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/t6"
            app:cardCornerRadius="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="#ffae00"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Artificial Intelligence" />
        </android.support.v7.widget.CardView>
        </LinearLayout>

   </LinearLayout>


</ScrollView>