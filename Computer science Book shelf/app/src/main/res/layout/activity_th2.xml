<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".th2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/b1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#ffffff"
            android:layout_marginTop="40dp" >

            <TextView
                android:id="@+id/textView78"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/light"
                android:textColor="#000"
                android:background="#80C7C7D8"
                android:elevation="3dp"
                android:text=" *click here for pdf "
                android:onClick="pdf9"
                />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/osb1" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:fontFamily="@font/light"
                android:layout_marginTop="180dp"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:text="This Book is about the concepts,structure, and mechanisms of operating systems.Its purpose is to present, as clearly and comletely as possible, the nature and characteristics of modern-day operating systems." />

            <TextView
                android:id="@+id/textView15"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="130dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/light"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                android:text="Operating Systems Internals and Design Principles" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/b2"
            app:cardCornerRadius="25dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            android:layout_margin="10dp"
            android:layout_below="@id/b1">

            <TextView
                android:id="@+id/textView79"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/light"
                android:textColor="#000"
                android:background="#80C7C7D8"
                android:elevation="3dp"
                android:text=" *click here for pdf "
                android:onClick="pdf10"
                />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/osb2"
                android:scaleType="fitStart"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="130dp"
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/light"
                android:textColor="#000"
                android:text="Modern Operating Systems" />

            <TextView
                android:id="@+id/textView13"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/light"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:text="This popular text on operating systems is the only book covering both the principles of operating systems and their application to a real system. All the traditional operating systems topics are covered in detail. " />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>